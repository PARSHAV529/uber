<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Security</title>
    <link rel="stylesheet" href="/css/riderSecurity.css" />
    <script
      src="https://kit.fontawesome.com/7ed32dcceb.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="wrapper">
      <div class="sidebar">
        <div class="header">
          <i class="fas fa-bars"></i>
          <span>Uber</span>
        </div>
        <nav>
          <ul>
            <li>
              <a href="/uber/rider" id="home">
                <i class="fas fa-home"></i>Home</a>
            </li>
            <li>
              <a href="/uber/rider/profile" id="account">
                <i class="fas fa-user"></i>Account</a>
            </li>
            <li>
              <a href="/uber/rider/security" class="active" id="security">
                <i class="fas fa-lock"></i>Security</a>
            </li>
            <li>
              <a href="/uber/rider/privacy" id="privacy">
                <i class="fas fa-info-circle"></i>Privacy & Data</a>
            </li>
          </ul>
        </nav>
      </div>

      <div class="main">
        <div class="profile-content">
          <div class="header"><p>Security</p></div>
          <div class="sub-header"><p>Logging in to Uber</p></div>
          <div id="content">
            <form action="/uber/api/rider/update-password" method="post" id="form"></form>
            <button id="otp" class="otp">Get OTP</button>
            <br>
            <div class="sub-header"><p>Connected Social Apps</p>
                <div style="display: flex; justify-content: space-between; width: 72.5%;">
                    <p style="font-size: 18px; font-weight: 0; ">Google</p>
                    <button class="disconnect" id="disconnect">Disconnect</button>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/riderSecurity.js"></script>
  </body>
</html>
